*.color14                   : nord7
*.color15                   : nord6

Xft.dpi                     :95
Xft.antialiasing            :true
Xft.rgba                    :rgb
Xft.hinting                 :true
Xft.lcdfilter               :lcddefault

URxvt*font                  : xft:Source Code Pro:Regular:pixelsize=12, xft:SauceCodePro Nerd Font:pixelsize=12
URxvt*boldFont              : xft:Source Code Pro:Bold:pixelsize=12
URxvt.boldItalicFont        : xft:Source Code Pro:Italic:pixelsize=12
URxvt*allow_bold            : true
URxvt*letterSpace			: 1
URxvt.internalBorder		: 3
URxvt.scrollBar             : false

URxvt*.perl-ext-common      : default,matcher,resize-font
URxvt.url-launcher          : xdg-open
URxvt.matcher.button        : 1
URxvt.matcher.pattern.1     : \\bwww\\.[\\w-]\\.[\\w./?&@#-\[\]

! +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
! Rofi
! ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++


rofi.color-enabled          : true
rofi.color-window           : nord0, nord0, nord0
rofi.color-normal           : nord0, nord5, nord0, nord1, nord11
rofi.color-active           : nord1, nord11, nord2, nord11, nord1
rofi.color-urgent           : #e12a36, #dd2a4b, #1b2b34

rofi.lines                  : 4
rofi.hide-scrollbar         : true
rofi.width                  : 300
rofi.padding                : 20
rofi.terminal               : termite
rofi.show-icons             : true
rofi.run-command            : fish -c '{cmd}'
